{% extends '@vactory_dashboard/_layout/main-content-layout.html.twig' %}

{% block content %}
  <div x-data="submission()">
    <div class="h-full flex flex-col bg-slate-50">
      <div class="sticky top-0 z-10 bg-white rounded-xl py-4 px-6 border-b border-slate-200 flex justify-between items-center mb-6">
        <div class="flex items-center gap-x-3">
          <a href="{{ path('vactory_dashboard.webform', {'id': id}) }}"
             class="me-3 text-slate-400 hover:text-primary-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="h-4 w-4">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
            </svg>
          </a>
          <h1 class="text-lg font-semibold text-slate-900" x-text="`${fields.label} - Submission ID: ${fields.id}`">{{ 'Soumission'|t }}</h1>
        </div>
      </div>

      <div class="flex-1 overflow-y-auto">
        <div class="mx-auto">
          <template x-if="loading">
            <div class="bg-white rounded-xl shadow-sm p-8">
              <div class="flex justify-center items-center py-12">
                <svg class="animate-spin h-8 w-8 text-primary-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="ms-3 text-sm text-slate-600">{{ "Loading..."|t }}</span>
              </div>
            </div>
          </template>

          <div x-show="!loading" class="bg-white rounded-xl shadow-sm p-2 lg:p-8">
            <div class="bg-slate-50 p-4 rounded-xl">
              <dl class="space-y-6">
                <!-- Loop for non file fields -->
                <template x-for="[key, field] in Object.entries(fields).filter(([key, field]) => field.type !== 'file')" :key="key">
                  <template x-if="!excludedFields.includes(key) && field.type">
                    <div class="py-4 border-b border-slate-200 last:border-b-0">
                      <div class="grid grid-cols-1 sm:grid-cols-3 gap-2 sm:gap-4">
                        <dt class="text-sm font-medium text-slate-700" x-text="field.name"></dt>
                        <dd class="text-sm text-slate-900 sm:col-span-2" x-text="normalizeValue(field.value)"></dd>
                      </div>
                    </div>
                  </template>
                </template>
                
                <!-- Loop for file fields only -->
                <template x-for="[key, field] in Object.entries(fields).filter(([key, field]) => field.type === 'file')" :key="key">
                  <div class="py-4 border-b border-slate-200 last:border-b-0">
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-2 sm:gap-4">
                      <dt class="text-sm font-medium text-slate-700" x-text="field.name || 'Attachments'"></dt>
                      <dd class="text-sm text-slate-900 sm:col-span-2">
                        <template x-if="field.value && (Array.isArray(field.value) ? field.value.length > 0 : field.value.url)">
                          <ul role="list" class="divide-y divide-slate-100 rounded-lg border border-slate-200 bg-white">
                            <!-- Handle multiple files -->
                            <template x-if="Array.isArray(field.value)">
                              <template x-for="file in field.value" :key="file.url">
                                <li class="flex items-center justify-between py-3 pl-4 pr-5 text-sm">
                                  <div class="flex w-0 flex-1 items-center">
                                    <svg class="h-5 w-5 shrink-0 text-slate-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 0 0-4.242 0l-7 7a3 3 0 0 0 4.241 4.243h.001l.497-.5a.75.75 0 0 1 1.064 1.057l-.498.501-.002.002a4.5 4.5 0 0 1-6.364-6.364l7-7a4.5 4.5 0 0 1 6.368 6.36l-3.455 3.553A2.625 2.625 0 1 1 9.52 9.52l3.45-3.451a.75.75 0 1 1 1.061 1.06l-3.45 3.451a1.125 1.125 0 0 0 1.587 1.595l3.454-3.553a3 3 0 0 0 0-4.242Z" clip-rule="evenodd" />
                                    </svg>
                                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                                      <span class="truncate font-medium text-slate-900" x-text="file.filename"></span>
                                      <span class="shrink-0 text-slate-500" x-text="field.value.filesize"></span>
                                    </div>
                                  </div>
                                  <div class="ml-4 shrink-0">
                                    <a :href="file.url" class="font-medium text-primary-600 hover:text-primary-500 transition-colors" download>{{ 'Download'|t }}</a>
                                  </div>
                                </li>
                              </template>
                            </template>

                            <!-- Handle single file -->
                            <template x-if="!Array.isArray(field.value)">
                              <li class="flex items-center justify-between py-3 pl-4 pr-5 text-sm">
                                <div class="flex w-0 flex-1 items-center">
                                  <svg class="h-5 w-5 shrink-0 text-slate-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 0 0-4.242 0l-7 7a3 3 0 0 0 4.241 4.243h.001l.497-.5a.75.75 0 0 1 1.064 1.057l-.498.501-.002.002a4.5 4.5 0 0 1-6.364-6.364l7-7a4.5 4.5 0 0 1 6.368 6.36l-3.455 3.553A2.625 2.625 0 1 1 9.52 9.52l3.45-3.451a.75.75 0 1 1 1.061 1.06l-3.45 3.451a1.125 1.125 0 0 0 1.587 1.595l3.454-3.553a3 3 0 0 0 0-4.242Z" clip-rule="evenodd" />
                                  </svg>
                                  <div class="ml-4 flex min-w-0 flex-1 gap-2">
                                    <span class="truncate font-medium text-slate-900" x-text="field.value.filename"></span>
                                    <span class="shrink-0 text-slate-500" x-text="field.value.filesize"></span>
                                  </div>
                                </div>
                                <div class="ml-4 shrink-0">
                                  <a :href="field.value.url" class="font-medium text-primary-600 hover:text-primary-500 transition-colors" download>{{ 'Download'|t }}</a>
                                </div>
                              </li>
                            </template>
                          </ul>
                        </template>

                        <!-- If no file is uploaded -->
                        <template x-if="!field.value || (Array.isArray(field.value) && field.value.length === 0)">
                          <span class="text-sm text-slate-500">---</span>
                        </template>
                      </dd>
                    </div>
                  </div>
                </template>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}