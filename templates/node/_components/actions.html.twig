<div class="bg-white z-30 sticky top-0 py-4 px-4 border-b border-slate-200 shadow-sm rounded-xl flex flex-col md:flex-row gap-4 md:gap-0 justify-between items-center mb-2">
	<div class="flex items-center gap-x-3">
		{% if node.title %}
			<h1 class="font-semibold text-2xl text-slate-900">{{ 'Edit @title - Page'|t({'@title': node.title}) }}</h1>
		{% else %}	
			<h1 class="font-semibold text-2xl text-slate-900">{{ label }}</h1>
		{% endif %}
		{# {% if true %}
		                <span class="text-xs bg-gray-300 p-1.5 text-white font-semibold rounded-lg">{{'Original'|t}}</span>
		        {% endif %} #}
	</div>
	{# <div class="hidden md:block h-8 w-px bg-slate-200 mx-6"></div> #}
	<div class="flex max-lg:w-full max-lg:flex-wrap max-lg:gap-3 max-lg:[&>*]:w-full max-lg:fixed max-lg:bottom-0 max-lg:left-0 max-lg:bg-white max-lg:shadow-lg max-lg:border-t max-lg:border-slate-200 max-lg:px-3 max-lg:py-4 lg:items-center lg:space-x-4">
		<div class="flex max-lg:items-center">
			<input type="checkbox" id="publish-status" x-model="settings.status" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-slate-300 rounded transition-all duration-150">
			<label for="publish-status" class="ml-2 block text-sm text-slate-700 font-medium">
				{{ 'Published'|t }}
			</label>
		</div>

		{% include "@vactory_dashboard/node/_components/langs.html.twig" %}

		<div class="flex items-center gap-2">
            {% include "@vactory_dashboard/node/_components/preview.html.twig" with { preview_url: preview_url } %}
			<button
				@click="saveChanges()" :disabled="isSaving" :class="{
					                'opacity-50 cursor-not-allowed': isSaving,
					                'bg-primary-500 hover:bg-primary-600': !isSaving,
					                'bg-primary-400': isSaving
					            }" class="max-lg:w-full inline-flex items-center justify-center gap-x-2 rounded-lg transition-all duration-150 px-5 py-2 text-sm font-semibold text-white bg-primary-500 hover:bg-primary-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
				<!-- Loading spinner (shown when saving) -->
				<svg x-show="isSaving" class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24">
					<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
					<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
				</svg>

				<!-- Button text (changes based on loading state) -->
				<span x-text="isSaving ? '{{ 'Saving...'|t }}' : '{{ 'Save'|t }}'"></span>
			</button>
		</div>
	</div>
</div>
