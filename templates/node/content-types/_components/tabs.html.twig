<div class="bg-white border-b border-slate-200 flex items-center justify-between">
    <div class="flex space-x-1">
        <button
                @click="activeTab = 'content'"
                :class="{
                    'border-primary-500 text-primary-600 bg-primary-50/50': activeTab === 'content',
                    'border-transparent text-slate-500 hover:text-slate-700 hover:bg-slate-50': activeTab !== 'content'
                }"
                class="px-4 py-3 font-medium text-sm border-b-2 transition-all duration-200">
            {{ 'Content'|t }}
        </button>
        <div x-show="Object.keys(crossContentFields).length > 0">
            <button
                    @click="activeTab = 'cross_content'"
                    :class="{
                        'border-primary-500 text-primary-600 bg-primary-50/50': activeTab === 'cross_content',
                        'border-transparent text-slate-500 hover:text-slate-700 hover:bg-slate-50': activeTab !== 'cross_content'
                    }"
                    class="px-4 py-3 font-medium text-sm border-b-2 transition-all duration-200">
                {{ 'Contenu Li√©'|t }}
            </button>
        </div>

        {% if has_seo %}
            <button
                    @click="activeTab = 'seo'"
                    :class="{
                    'border-primary-500 text-primary-600 bg-primary-50/50': activeTab === 'seo',
                    'border-transparent text-slate-500 hover:text-slate-700 hover:bg-slate-50': activeTab !== 'seo'
                }"
                    class="px-4 py-3 font-medium text-sm border-b-2 transition-all duration-200">
                {{ 'SEO'|t }}
            </button>
        {% endif %}
        {% if has_paragraphs_field %}
            <button
                    @click="activeTab = 'templates'"
                    :class="{
                    'border-primary-500 text-primary-600 bg-primary-50/50': activeTab === 'templates',
                    'border-transparent text-slate-500 hover:text-slate-700 hover:bg-slate-50': activeTab !== 'templates'
                }"
                    class="px-4 py-3 font-medium text-sm border-b-2 transition-all duration-200">
                {{ 'Templates'|t }}
            </button>
        {% endif %}
    </div>
    {% if alias %}
        <div class="flex justify-end mr-1">
            {% include "@vactory_dashboard/node/_components/page-speed.html.twig" with { url: alias } %}
        </div>
    {% endif %}
</div>