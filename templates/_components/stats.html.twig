                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-600">{{ "Médias" | t }}</p>
                        <p class="text-2xl font-semibold text-slate-900 mt-1">{{ total_media }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Modified Pages Card #}
    <div class="bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-md transition-all duration-200">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-start">
                    <div class="p-2.5 rounded-lg bg-purple-50 text-purple-600 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="h-6 w-6">
