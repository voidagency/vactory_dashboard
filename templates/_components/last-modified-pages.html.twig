<div class="bg-white rounded-xl shadow-sm border border-slate-100 mb-8 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200">
        <h2 class="text-lg font-semibold text-slate-900">{{ "Pages récemment modifiées"|t }}</h2>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead>
            <tr class="border-b border-slate-200 bg-slate-100 hover:bg-slate-100">
                <th class="px-6 py-4 text-left font-semibold text-slate-700 uppercase tracking-wider">{{ "Titre"|t }}</th>
                <th class="px-6 py-4 text-left font-semibold text-slate-700 uppercase tracking-wider">{{ "Dernière modification"|t }}</th>
                <th class="px-6 py-4 text-center font-semibold text-slate-700 uppercase tracking-wider">{{ "Actions"|t }}</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
            {% for page in last_modified_pages %}
                <tr class="hover:bg-slate-50 transition-colors duration-150 group">
                    <td class="px-3 lg:px-6 py-4 lg:py-5">
                        <div class="flex items-center">
                            <div class="p-1.5 rounded-lg bg-slate-100 text-slate-600 mr-3">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                     stroke="currentColor" class="h-4 w-4">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"></path>
                                </svg>
                            </div>
                            <span class="text-sm font-medium text-slate-900 truncate">{{ page.title }}</span>
                        </div>
                    </td>
                    <td class="px-3 lg:px-6 py-4 lg:py-5">
                        <div class="text-sm font-medium text-slate-900"
                             title="{{ page.changed | date('d F Y, H:i') }}">
                            {{ page.changed | date('d M Y') }}
                        </div>
                        <div class="text-xs text-slate-500 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="h-3 w-3 mr-1">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
                            </svg>
                            {{ page.changed | date('H:i') }}
                        </div>
                    </td>
                    <td class="px-3 lg:px-6 py-4 lg:py-5 flex justify-center">
                        <a class="text-gray-400 hover:text-primary-500"
                           href="{{ path('vactory_dashboard.vactory_page.edit', {'id': page.id}) }}"
                           data-discover="true"
                           title="{{ "Modifier"|t }}">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"></path>
                            </svg>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>