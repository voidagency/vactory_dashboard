                                                                            </template>

                                                                            {# Checkbox #}
                                                                            <template x-if="item.type === 'checkbox'">
                                                                                <div>
                                                                                    <input type="checkbox"
                                                                                        :required="item.options?.['#required'] ?? false"
                                                                                        x-model="blockForm.extra_fields[fieldName][itemName]"
