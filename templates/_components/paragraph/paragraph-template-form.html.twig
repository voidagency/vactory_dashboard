                                <div x-show="selectedTemplate?.fields">
                                    {# Start handling single Item Fields #}
                                    <template x-if="!selectedTemplate?.multiple">
                                        <div class="flex flex-col gap-6 bg-slate-50 p-4 rounded-xl">
