{#
Entity Autocomplete Field Component
Uses $dispatch to communicate with parent Alpine.js scope
#}
<div class="entity-autocomplete-field"
     x-data="{
        searchQuery: '',
        results: [],
        isLoading: false,
        showResults: false,
        selectedEntity: null,
        searchTimeout: null,

        async search(query) {
            clearTimeout(this.searchTimeout);
            
            if (!query || query.length < 2) {
                this.results = [];
                this.showResults = false;
                return;
            }

            this.searchTimeout = setTimeout(async () => {
                this.isLoading = true;
                try {
                    const res = await fetch('/api/nodes/links?q=' + encodeURIComponent(query));
                    const data = await res.json();
                    this.results = data || [];
                    this.showResults = this.results.length > 0;
                } catch (e) {
                    console.error('Entity autocomplete error:', e);
                    this.results = [];
                }
                this.isLoading = false;
            }, 300);
        },

        selectItem(item) {
            // Use target_id format for the model value
            this.selectedEntity = { target_id: item.id, title: item.title };
            this.searchQuery = '';
            this.results = [];
            this.showResults = false;
        },

        clearSelection() {
            this.selectedEntity = null;
            this.searchQuery = '';
        },

        // Helper to get display data from model value
        getDisplayId() {
            if (!this.selectedEntity) return null;
            return this.selectedEntity.target_id || this.selectedEntity.id;
        },
        getDisplayTitle() {
            if (!this.selectedEntity) return null;
            return this.selectedEntity.title || 'Node #' + this.getDisplayId();
        }
     }"
     x-modelable="selectedEntity"
     x-model="{{ x_model }}"
>
    {# Selected Entity Display #}
    <template x-if="selectedEntity">
        <div class="flex items-center gap-2 p-3 bg-primary-50 border border-primary-200 rounded-lg mb-2">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span class="flex-1 text-sm text-slate-700" x-text="getDisplayTitle()"></span>
            <span class="text-xs text-slate-500" x-text="'ID: ' + getDisplayId()"></span>
            <button type="button" @click="clearSelection()" class="text-slate-400 hover:text-red-500 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
    </template>

    {# Hidden input for validation - has value when entity is selected #}
    <input type="hidden"
           :value="selectedEntity ? getDisplayId() : ''"
           :required="{{ required }}">

    {# Search Input #}
    <div class="relative">
        <div style="position: relative; display: flex; align-items: center;">
            <svg style="position: absolute; left: 12px; width: 16px; height: 16px; color: #94a3b8; pointer-events: none;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input type="text"
                   x-model="searchQuery"
                   @input="search($event.target.value)"
                   @focus="showResults = results.length > 0"
                   @blur="setTimeout(() => showResults = false, 200)"
                   :placeholder="selectedEntity ? '{{ 'Search to change...'|t }}' : '{{ 'Search for content...'|t }}'"
                   style="width: 100%; padding: 8px 12px 8px 38px; font-family: inherit; font-size: 14px; border: 1px solid #cbd5e1; border-radius: 8px; outline: none;"
                   class="focus:ring-2 focus:ring-primary-300 focus:border-transparent transition-all duration-150">
            <svg x-show="isLoading" style="position: absolute; right: 12px; width: 16px; height: 16px;" class="text-primary-500 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
        </div>

        {# Results Dropdown #}
        <ul x-show="showResults && results.length > 0"
            x-transition
            class="absolute z-20 mt-1 w-full max-h-60 overflow-y-auto bg-white border border-slate-300 rounded-lg shadow-lg">
            <template x-for="item in results" :key="item.id">
                <li @mousedown.prevent="selectItem(item)"
                    class="px-3 py-2 cursor-pointer hover:bg-slate-100 border-b border-slate-100 last:border-b-0">
                    <div class="font-medium text-sm text-slate-800" x-text="item.title"></div>
                    <div class="text-xs text-slate-500 flex gap-2">
                        <span x-text="item.type"></span>
                        <span>|</span>
                        <span x-text="'ID: ' + item.id"></span>
                        <template x-if="item.author">
                            <span>| <span x-text="item.author"></span></span>
                        </template>
                    </div>
                </li>
            </template>
        </ul>

        {# No results message #}
        <div x-show="showResults && results.length === 0 && searchQuery.length >= 2 && !isLoading"
             class="absolute z-20 mt-1 w-full p-3 bg-white border border-slate-300 rounded-lg shadow-lg text-sm text-slate-500 text-center">
            {{ 'No results found'|t }}
        </div>
    </div>
</div>
