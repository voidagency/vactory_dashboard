<template x-if="dynamicFields?.[field.name] === undefined || dynamicFields?.[field.name]?.length === 0">
    <div class="mb-4 flex justify-between items-center">
        <div class="flex space-x-2">
            {% include '@vactory_admin/components/button/button.twig' with {
                text: 'Add block'|t,
                size: 'md',
                type: 'button',
                variant: 'primary',
                click_handler: 'showParagraphTemplateForm(field.name)',
                icon_left: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon" class="h-3.5 w-3.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path></svg>'
            } %}
        </div>
    </div>
</template>
{# Modal for paragraph template form #}
<div x-show="showDynamicFieldModal" 
     class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0">
    
    <div class="bg-white rounded-xl shadow-xl w-full max-w-6xl max-h-[90vh] overflow-hidden"
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="opacity-0 transform scale-95"
         x-transition:enter-end="opacity-100 transform scale-100"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100 transform scale-100"
         x-transition:leave-end="opacity-0 transform scale-95">
        
        {# Modal Header #}
        <div class="flex items-center justify-between p-6 border-b border-slate-200">
            <h2 class="text-lg font-semibold text-slate-900">{{ 'Add Paragraph Block'|t }}</h2>
            <button @click="showDynamicFieldModal = false" 
                    type="button"
                    class="text-slate-400 hover:text-slate-600 transition-colors">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
        
        {# Modal Content #}
        <div class="overflow-y-auto max-h-[calc(90vh-120px)]">
            {% include "@vactory_dashboard/_components/paragraph/paragraph-template-form.html.twig" with {
                hideBlockConfig: true,
            } %}
        </div>
    </div>
</div>

<template x-if="Object.keys(dynamicFields?.[field.name] || {}).length > 0">
    {% include "@vactory_dashboard/_components/paragraph/blocks.html.twig" with {
        type: 'dynamic_field',
    } %}
</template>