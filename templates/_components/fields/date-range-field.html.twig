<template x-if="field.type === 'daterange'">
	<div class="flex flex-col gap-2">
		<div class="flex flex-col">
			<label class="text-sm text-gray-600 mb-1">
				Start date
			</label>
			<input type="date" x-model="formData.fields[field.name].value" :required="field.required" class="w-auto py-1.5 px-3 border border-gray-300 rounded-md"/>
		</div>
		<div class="flex flex-col">
			<label class="text-sm text-gray-600 mb-1">
				End date
			</label>
			<input type="date" x-model="formData.fields[field.name].end_value" :required="field.required" class="w-auto py-1.5 px-3 border border-gray-300 rounded-md"/>
			<span x-show="formData.fields[field.name].end_value && formData.fields[field.name].value && (formData.fields[field.name].end_value < formData.fields[field.name].value)" class="text-red-500 text-xs mt-1">
				End date cannot be before start date
			</span>
		</div>
	</div>
</template>
