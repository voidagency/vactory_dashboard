<template x-if="field.type === 'daterange'">
	<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
		<div class="space-y-2">
			<label class="block text-sm font-medium text-slate-700">
				{{ 'Start date'|t }}
				<span x-show="field.required" class="text-red-500">*</span>
			</label>
			<div class="relative">
				<input type="date" 
					   x-model="formData.fields[field.name].value" 
					   :required="field.required" 
					   class="w-full py-2 px-3 text-sm border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-300 focus:border-transparent transition-all duration-150 bg-white"
				/>
			</div>
		</div>
		<div class="space-y-2">
			<label class="block text-sm font-medium text-slate-700">
				{{ 'End date'|t }}
				<span x-show="field.required" class="text-red-500">*</span>
			</label>
			<div class="relative">
				<input type="date" 
					   x-model="formData.fields[field.name].end_value" 
					   :required="field.required" 
					   class="w-full py-2 px-3 text-sm border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-300 focus:border-transparent transition-all duration-150 bg-white"
					   :class="{'border-red-300 focus:ring-red-300': formData.fields[field.name].end_value && formData.fields[field.name].value && (formData.fields[field.name].end_value < formData.fields[field.name].value)}"
				/>
			</div>
			<div x-show="formData.fields[field.name].end_value && formData.fields[field.name].value && (formData.fields[field.name].end_value < formData.fields[field.name].value)" 
				 class="flex items-center gap-1 text-red-600 text-xs mt-1">
				<svg class="h-3 w-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<span>{{ 'End date cannot be before start date'|t }}</span>
			</div>
		</div>
	</div>
</template>
