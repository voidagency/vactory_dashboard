{# Clean Media Selector #}
<div class="media-selector" x-data="{ showVideoModal: false, videoUrl: '' }" )
<input type="hidden" value="{{ type }}">

{# Empty State #}
<template x-if="!{{ url }}">
    <button
            :required="{{ required }}"
            @click="openMediaLibrary(fieldName, {{ path }}, {{ key }}, '{{ type }}',  '{{ appearance }}')"
            type="button"
            class="group relative w-full h-32 border-2 border-dashed border-slate-300 rounded-xl hover:border-primary-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-200 bg-slate-50 hover:bg-primary-50">

        <div class="flex flex-col items-center justify-center h-full">
            <div class="w-12 h-12 rounded-full bg-white shadow-sm flex items-center justify-center mb-3 group-hover:scale-105 transition-transform">
                {% if type == "file" or type == "private_file" %}
                    <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                {% elseif type == 'remote_video' %}
                    <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                {% else %}
                    <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12z"/>
                    </svg>
                {% endif %}
            </div>

            <div class="text-center">
                <p class="text-sm font-medium text-slate-700 group-hover:text-primary-600 transition-colors">
                    {% if type == "file" %}
                        {{ 'Choisir un document'|t }}
                    {% elseif type == "private_file" %}
                        {{ 'Choisir un document privé'|t }}
                    {% elseif type == 'remote_video' %}
                        {{ 'Choisir une vidéo'|t }}
                    {% else %}
                        {{ 'Choisir une image'|t }}
                    {% endif %}
                </p>
                <p class="text-xs text-slate-500 mt-1">{{ 'Cliquer pour sélectionner'|t }}</p>
            </div>
        </div>
    </button>
</template>

{# Selected Media State #}
<template x-if="{{ url }}">
    <div class="relative group">
        {# Main Preview Card #}
        <div class="bg-white border border-slate-200 rounded-xl p-3 sm:p-4 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start sm:items-center flex-col sm:flex-row gap-3 sm:gap-4">

                {# Thumbnail #}
                <div class="flex-shrink-0">
                    <div class="w-[200px] h-[120px] rounded-lg overflow-hidden border border-slate-100 flex-shrink-0">
                        {% if type == "file" or type == "private_file" %}
                        <div class="w-full h-full bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center">
                            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-blue-600" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                      d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        {% elseif type == 'remote_video' %}
                        <div class="w-full h-full relative cursor-pointer group"
                             @click="showVideoModal = true; videoUrl = {{ url }}")
                        <!-- YouTube thumbnail image -->
                        <template x-if="{{ url }}">
                            <img
                                    x-bind:src="(() => {
                                                const url = {{ url }};
                                                console.log('Video URL:', url);
                                                if (!url) return '';
                                                const youtubePatterns = [
                                                    /(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([^&\n?#]+)/,
                                                    /youtube\.com\/watch\?.*v=([^&\n?#]+)/,
                                                ];
                                                for (const pattern of youtubePatterns) {
                                                    const match = url?.match(pattern);
                                                    if (match) {
                                                        const videoId = match[1];
                                                        const thumbnailUrl = `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`;
                                                        console.log('Thumbnail URL:', thumbnailUrl);
                                                        return thumbnailUrl;
                                                    }
                                                }
                                                console.log('No YouTube pattern matched');
                                                return '';
                                            })()"
                                    class="w-full h-full object-cover"
                                    loading="lazy"
                                    alt="Video thumbnail"
                                    onerror="console.log('Thumbnail failed to load:', this.src);">
                        </template>

                        <!-- Fallback for non-YouTube videos or no URL -->
                        <template x-if="!{{ url }}">
                            <div class="w-full h-full bg-gradient-to-br from-purple-100 to-purple-200 flex items-center justify-center">
                                <svg class="w-6 h-6 sm:w-8 sm:h-8 text-purple-600" fill="none" viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                          d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </div>
                        </template>

                        <!-- Play button overlay - only appears on hover -->
                        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 flex items-center justify-center transition-all duration-200">
                            <div class="bg-white bg-opacity-0 group-hover:bg-opacity-90 rounded-full p-0 group-hover:p-3 group-hover:scale-110 transition-all duration-200">
                                <svg class="w-0 h-0 group-hover:w-6 group-hover:h-6 text-slate-800 transition-all duration-200"
                                     fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    {% else %}
                        <img
                                :src="{{ url }}"
                                class="w-full h-full object-cover"
                                loading="lazy"
                                :alt="{{ name }}">
                    {% endif %}
                </div>
            </div>

            {# Content #}
            <div class="flex-1 min-w-0 w-full sm:w-auto">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-4">
                    <div class="flex-1 min-w-0">
                        <h4 class="text-sm font-medium text-slate-900 truncate" x-text="{{ name }}"></h4>
                        <div class="mt-1 flex items-center flex-wrap gap-2">
                            {% if type == "file" or type == "private_file" %}
                                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700 border border-blue-200">
                                    <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                    {{ type == "private_file" ? 'Document privé'|t : 'Document'|t }}
                                </span>
                            {% elseif type == 'remote_video' %}
                                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-purple-50 text-purple-700 border border-purple-200">
                                    <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                    </svg>
                                    {{ 'Vidéo'|t }}
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-50 text-green-700 border border-green-200">
                                    <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12z"/>
                                    </svg>
                                    {{ 'Image'|t }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    {# Actions #}
                    <div class="flex items-center gap-2 flex-shrink-0">
                        <button
                                @click="openMediaLibrary(fieldName, {{ path }}, {{ key }}, '{{ type }}', '{{ appearance }}')"
                                type="button"
                                class="inline-flex items-center p-1.5 border border-slate-300 text-xs font-medium rounded-md text-slate-700 bg-white hover:bg-primary-100 focus:outline-none focus:ring-2 focus:ring-primary-500 transition-colors"
                                title="{{ 'Modifier'|t }}">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                        </button>

                        <button
                                @click="clearImage(fieldName, {{ path }}, {{ key }}, {{ isMultiple }})"
                                type="button"
                                class="inline-flex items-center p-1.5 border border-red-200 text-red-600 bg-red-50 hover:bg-red-100 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors"
                                title="{{ 'Supprimer'|t }}">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
</template>

{# Video Modal - Local to this component #}
<div x-show="showVideoModal"
     class="fixed inset-0 bg-black bg-opacity-75 backdrop-blur-sm z-50 flex items-center justify-center p-4"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     @click.self="showVideoModal = false"
     @keydown.escape.window="showVideoModal = false"
     style="display: none;"
     x-cloak>

    <div class="bg-white rounded-xl shadow-xl w-full max-w-4xl max-h-[90vh] overflow-hidden"
         @click.stop>

        {# Modal Header #}
        <div class="flex items-center justify-between p-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-900">{{ 'Video Preview'|t }}</h3>
            <button type="button"
                    @click.stop="showVideoModal = false"
                    class="text-slate-400 hover:text-slate-600 transition-colors">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>

        {# Video Content #}
        <div class="relative aspect-video bg-black">
            <iframe x-show="showVideoModal"
                    :src="(() => {
                            if (!videoUrl) return '';
                            const youtubePatterns = [
                                /(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([^&\n?#]+)/,
                                /youtube\.com\/watch\?.*v=([^&\n?#]+)/,
                            ];
                            for (const pattern of youtubePatterns) {
                                const match = videoUrl?.match(pattern);
                                if (match) {
                                    const videoId = match[1];
                                    return `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`;
                                }
                            }
                            return videoUrl;
                        })()"
                    class="w-full h-full"
                    frameborder="0"
                    allowfullscreen>
            </iframe>
        </div>
    </div>
</div>
</div>
